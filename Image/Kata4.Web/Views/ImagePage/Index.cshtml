@model Kata4.Web.Models.ImageListModel

@{
    ViewBag.Title = "Image List";
}

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>List Images</title>
</head>
<body>
<div>
    <h2>List Images</h2>
    @if (ViewBag.ErrorMessage != null)
    {
        <script type="text/javascript">
            alert("@(ViewBag.ErrorMessage)");
        </script>
    }

    @foreach (var item in Model.Images)
    {
        <div class="row">
            <div class="col-md-2">id: @item.Id</div>
            <div class="col-md-3">Name: @item.Name</div>
            <div class="col-md-7">
                <img src="data:image;base64,@Convert.ToBase64String(item.Data)" alt="image"/>
            </div>
        </div>
    }

    @Html.ActionLink("Upload image", "Index", "ImageLoad")
</div>
</body>
</html>