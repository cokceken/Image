@model Kata4.Web.Models.ImageLoadModel

@{
    ViewBag.Title = "Image load";
}

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
</head>
<body>
<div>
    <h2>Load Image</h2>

    @Html.ActionLink("Go to home page", "Index", "ImagePage")

    @if (ViewBag.ErrorMessage != null)
    {
        <script type="text/javascript">
            alert("@(ViewBag.ErrorMessage)");
        </script>
    }

    @if (Model?.Result != null && Model.Result == true)
    {
        <h1>Success</h1>
    }

    using (Html.BeginForm("Upload", "ImageLoad", FormMethod.Post, new {enctype = "multipart/form-data"}))
    {
    <div class="form-group">
        @Html.LabelFor(x => x.Name, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.UploadedImage, new {@class = "control-label col-md-2"})
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.UploadedImage, new {type = "file"})
            @Html.ValidationMessageFor(m => m.UploadedImage)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default"/>
        </div>
    </div>
    }

</div>
</body>
</html>